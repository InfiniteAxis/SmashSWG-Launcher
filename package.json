{
	"name": "smashswg-launcher",
	"version": "0.0.1",
	"description": "Launcher and Patcher for Smashley's SWG Server",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder --dir --win",
		"deploy": "electron-builder --win --publish always --ia32"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/InfiniteAxis/SmashSWG-Launcher.git"
	},
	"keywords": [
		"launcher",
		"swgemu"
	],
	"author": "InfiniteAxis",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/InfiniteAxis/SmashSWG-Launcher/issues"
	},
	"homepage": "https://github.com/InfiniteAxis/SmashSWG-Launcher#readme",
	"devDependencies": {
		"electron": "^32.0.1",
		"electron-builder": "^24.13.3"
	},
	"dependencies": {
		"adm-zip": "^0.5.15",
		"electron-is-dev": "^0.2.0",
		"electron-log": "^4.3.1",
		"electron-updater": "^6.3.4",
		"follow-redirects": "^1.13.2",
		"mkdirp": "^1.0.4",
		"random-access-file": "^2.1.5",
		"request": "^2.88.2"
	},
	"build": {
		"productName": "Smash Wars Galaxy Launcher",
		"win": {
			"requestedExecutionLevel": "highestAvailable",
			"target": [
				"nsis",
				"zip"
			]
		},
		"nsis": {
			"perMachine": true
		}
	},
	"postinstall": "electron-builder install-app-deps"
}
